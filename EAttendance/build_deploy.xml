<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." name="EAttendance">

	<taskdef name="wsInstallApp" classname="com.ibm.websphere.ant.tasks.InstallApplication"/>
	
	<property name="hostName" value="localhost" />
	<property name="connType" value="SOAP" />
	<property name="port" value="8880" />
	<property name="userId" value="admin" />
	<property name="password" value="password" />
	<property name="warDir" value="C:\Program Files (x86)\Jenkins\workspace\Application Build\EAttendance" />
	<property name="warFile" value="EAttendance.war" />
	<property name="appName" value="EAttendance" />
	<property name="wasHome.dir" value="C:\Program Files\IBM\WebSphere\AppServer" />
	
	<!-- installation Target-->
	<target name="deployWar">
	<wsInstallApp 
		ear="${warDir}/${warFile}" 
		options="-appname ${appName} -usedefaultbindings"
		wasHome="${wasHome.dir}" 
		conntype="${connType}"
		port="${port}" 
		host="${hostName}" 
		user="${userId}" 
		password="${password}" />
	</target>
	
	<!-- List Target-->
	<target name="listApplications">
	<wsListApplications 
		wasHome="${wasHome.dir}" 
		conntype="${connType}"
		port="${port}" 
		host="${hostName}" 
		user="${userId}" 
		password="${password}" />
	</target>
	
</project>